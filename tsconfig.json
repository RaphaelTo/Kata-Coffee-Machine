{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "lib": ["es2020"],
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["test/**/*"]
}